---
import { marked } from "marked";

export interface Props {
  title: string;
  description?: string;
  anchor?: string;
  isDark?: boolean;
}

const { title, description = "", anchor, isDark = false } = Astro.props;
---

<section
  id={anchor}
  class:list={[
    "flex px-12 py-16",
    isDark ? "bg-gray-800 text-white" : "bg-gray-50",
  ]}
>
  <div
    class:list={[
      "container max-w-5xl mx-auto flex flex-col items-center",
      "lg:space-x-36 lg:flex-row",
    ]}
  >
    <div class="flex-1">
      <h3 class="mb-4 text-xl lg:text-2xl font-semibold">{title}</h3>
      <div class="font-light" set:html={marked(description)} />
      <slot />
    </div>
  </div>
</section>
