---
import '~/styles/app.css';

import { siteMetadata } from '~/constants';
import SiteFooter from '~/components/Footer.astro';
import GoogleAnalytics from '~/components/GoogleAnalytics.astro';
import Navbar from '~/components/Navbar.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
const ogImage = `${siteMetadata.url}/images/social.png`;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <meta name="description" content={siteMetadata.description}>
    <title>{title}</title>

    <!-- Favicons -->
    <link rel="icon" href="/images/favicon.ico">
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/images/favicon-32x32.png"
    >
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/images/favicon-16x16.png"
    >
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/images/apple-touch-icon.png"
    >

    <!-- Open Graph Meta Tags for Social Media -->
    <meta property="og:title" content={title}>
    <meta property="og:description" content={siteMetadata.description}>
    <meta property="og:type" content="website">
    <meta property="og:url" content={siteMetadata.url}>
    <meta property="og:image" content={ogImage}>

    <!-- Google Analytics and Site Verification -->
    <GoogleAnalytics/>
    <meta
      name="google-site-verification"
      content={siteMetadata.google.siteVerification}
    >
  </head>
  <body class="flex flex-col min-h-screen">
    <Navbar currentPathname={Astro.url.pathname}/>
    <slot/>
    <SiteFooter currentPathname={Astro.url.pathname}/>
  </body>
</html>
