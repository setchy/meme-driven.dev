---
import { Image } from "astro:assets";

import cover from "~/assets/orly-book-cover.png";
import { siteMetadata } from "~/constants";
---

<div class="bg-gray-100">
  <div
    class="container flex flex-col md:flex-row lg:items-center max-w-5xl mx-auto px-12 py-8 lg:py-16"
  >
    <div class="flex flex-col justify-center flex-grow">
      <h1 class="text-2xl lg:text-4xl font-semibold">{siteMetadata.title}</h1>

      <h2 class="mt-2 text-xl lg:text-2xl font-light">
        {siteMetadata.description}.
      </h2>
    </div>

    <div
      class="rotate-6 flex justify-center items-center flex-col motion-preset-pop"
    >
      <Image
        class="block w-full max-w-sm mx-auto h-auto shadow-2xl rounded-xl transform mt-10"
        src={cover}
        alt="Meme-Driven Development Book"
      />
    </div>
  </div>
</div>
